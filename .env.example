# RustDesk Server Configuration
# Copy this file to .env and update with your values

# Server Configuration
RELAY_SERVER=rustdesk-hbbr
SERVER_DOMAIN=rustdesk.yourdomain.com
PUBLIC_IP=YOUR_PUBLIC_IP_HERE

# Network Configuration
DOCKER_SUBNET=172.20.0.0/24

# Database Configuration (for full deployment with API server)
POSTGRES_DB=rustdesk
POSTGRES_USER=rustdesk_admin
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_URL=postgresql://rustdesk_admin:CHANGE_ME_STRONG_PASSWORD@postgres:5432/rustdesk

# Active Directory / LDAP Configuration (Optional)
LDAP_ENABLED=false
LDAP_SERVER=ldap://your-ad-server.domain.com:389
LDAP_BASE_DN=DC=yourdomain,DC=com
LDAP_BIND_DN=CN=RustDesk Service Account,OU=Service Accounts,DC=yourdomain,DC=com
LDAP_BIND_PASSWORD=CHANGE_ME_LDAP_PASSWORD
LDAP_USER_FILTER=(objectClass=user)
LDAP_GROUP_FILTER=(objectClass=group)

# SSL/TLS Configuration
SSL_CERT_PATH=./certs/fullchain.pem
SSL_KEY_PATH=./certs/privkey.pem

# Security
# Generate with: openssl rand -base64 32
API_SECRET_KEY=CHANGE_ME_RANDOM_SECRET_KEY
SESSION_SECRET=CHANGE_ME_SESSION_SECRET

# Email Configuration (for notifications)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=rustdesk@yourdomain.com
SMTP_PASSWORD=CHANGE_ME_EMAIL_PASSWORD
SMTP_FROM=rustdesk@yourdomain.com

# Logging
LOG_LEVEL=info

# Performance Tuning (for 8000 devices)
MAX_CONNECTIONS=10000
WORKER_PROCESSES=4
